{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "prettier",
    "plugin:import/recommended",
    "plugin:testing-library/react"
  ],
  "overrides": [
    {
      "files": ["src/**/*.spec.[jt]s?(x)"],
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"]
    },
    {
      "files": ["src/**/*.stories.[jt]s?(x)"],
      "plugins": ["jest"],
      "extends": ["plugin:storybook/recommended"]
    }
  ]
}
